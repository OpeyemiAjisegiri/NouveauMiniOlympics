  <div class="container">
    <%= link_to "Mini Olympics", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in?  %>
          <% if current_user.admin? %>
            <li><%= link_to "Home", admin_user_profile_path(current_user, @Profile) %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Teams", admin_teams_path %></li>
            <li><%= link_to "Sports", admin_sports_path %></li>
          <% else %>
            <li><%= link_to "Home", user_profile_path(current_user, @Profile) %></li>
          <% end %>
          <li><%= link_to "Help", help_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                 <li class="divider"></li>
                 <li><%= link_to "Create A Team", new_admin_team_path %></li>
                 <li><%= link_to "Create A Sport", new_admin_sport_path %></li>               
