<% provide(:title, "Registration") %>
<h1>Register For The Olympics</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :Team %>
        <%= f.collection_select :team_id, Team.order(:teamname), :id,:teamname, :prompt => 'Select One', class: 'form-control' %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>