<% provide(:title, 'Create Sport') %>
<h1>Create Sport</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin,(setup_sport(@sport))] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        
      <%= f.fields_for :medal do |ff| %>
        <%= ff.hidden_field 'medal',:value => [gold_id: 'nil', silver_id: 'nil', bronze_id: 'nil']  %>
      <% end %>
      <%= render 'fields', f: f %>  
     <%= f.submit "Create Sport", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>