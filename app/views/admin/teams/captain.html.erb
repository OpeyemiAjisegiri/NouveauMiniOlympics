<% provide(:title, "Select/Change Team Captain For " +@team.teamname) %>
<h1> Select/Change Team Captain For <%= @team.teamname %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label "Team Captain" %>
      <%= f.collection_select(:captain, @team.users, :team_id, :email, :prompt => true ) %>
     <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

